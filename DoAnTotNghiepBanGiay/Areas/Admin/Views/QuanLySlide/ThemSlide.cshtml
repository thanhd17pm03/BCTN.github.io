@model Model.EF.SLIDE

@{
    ViewBag.Title = "Thêm slide mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var vb_anhdaidien = ViewBag.vb_anhdaidien;
}

@section sectionHead{

    <style>
        .form-group {
            margin-bottom: 10px !important;
            clear: both;
            min-height: 35px;
            position: relative;
            padding-bottom: 5px !important;
        }



        .form-control123 {
            display: block;
            width: 60%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            float: left;
            margin-right: 10px;
        }



        .form-group1122 {
            clear: both;
            padding-top: 10px;
            text-align: center;
        }


        #cke_txtnoidung {
            margin-bottom: 10px;
        }



        .form-group {
            padding-bottom: 25px !important;
        }
    </style>

}


@section sectiontitleheader{
    THÊM SLIDE
}


@section scriptfooter{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btn_avt_product').click(function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (urlimage) {
                    $('#txt_avt_product').val(urlimage);
                    $("#imagepath").attr("src", urlimage);
                };
                finder.popup();
            });
            var ckeditor = CKEDITOR.replace('txtDetail', {
                customConfig: '/Assets/Admin/plugins/ckeditor/config.js',
            });
            var ckeditor = CKEDITOR.replace('txtDescription', {
                customConfig: '/Assets/Admin/plugins/ckeditor/config.js',
            });
        });

    </script>
}




@using (Html.BeginForm("ThemSlide", "QuanLySlide", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.TenSlide, htmlAttributes: new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenSlide, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenSlide)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Anh, htmlAttributes: new { @class = "control-laber col-md-2" })

            <div class="col-md-1">
                @Html.TextBoxFor(model => model.Anh, new { @readonly = "readonly", @class = "form-control123 hidden none", htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, id = "txt_avt_product" })
                <a id="btn_avt_product" href="#"> Chọn ảnh</a>
                @Html.ValidationMessageFor(model => model.Anh)
            </div>
            <div class="col-md-6">
                <img id="imagepath" width="200" src="@vb_anhdaidien" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Link, htmlAttributes: new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Link, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Link)
            </div>
        </div>


        <center>
            <input type="submit" class="btn btn-danger" value="Thêm sản phẩm" />
        </center>
    </fieldset>
}

